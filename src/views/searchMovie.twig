{% extends 'layouts/public.twig' %} {% block title %}Recherche{% endblock %} {%
block content %}
<h1 class="wrapper">Liste des films</h1>
<div class="wrapper" id="movies">
    {% for movie in movies %}
    <article>
        <a href="{{ getUrl('details', { slug: movie.slug }) }}">
            <img src="{{ movie.poster }}" alt="{{ movie.title }}" />
            <h2>{{ movie.title }}</h2>
        </a>
    </article>
    {% endfor %}
</div>
{% endblock %}